# EditorConfig 配置文件
# https://editorconfig.org

# 顶级配置
root = true

# 通用设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 对 JavaScript / TypeScript / JSON / HTML / CSS 文件
[*.{js,ts,tsx,jsx,json,css,scss,html}]
indent_style = space
indent_size = 2

# 对 YAML / Markdown 文件
[*.{yml,yaml,md}]
indent_style = space
indent_size = 2

# 对 Makefile 使用 tab 缩进
[Makefile]
indent_style = tab

# 对 Shell 脚本
[*.sh]
indent_style = space
indent_size = 2